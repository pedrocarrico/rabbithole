<h1>Post new message</h1>
<fieldset>
    <%= render 'form' %>
</fieldset>
<h1>Available messages</h1>

<table>
  <tr>
    <th>From</th>
    <th>To</th>
    <th>Body</th>
    <th></th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%= message.from %></td>
    <td><%= message.to %></td>
    <td><%= message.body %></td>
    <td><%= link_to 'Show', message %></td>
    <td><%= link_to 'Destroy', message, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

